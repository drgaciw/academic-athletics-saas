{
  "name": "@aah/service-ai",
  "version": "2.0.0",
  "private": true,
  "description": "AI microservice for conversational interfaces, RAG pipelines, and agentic workflows",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup src/index.ts --format esm,cjs --external @ai-sdk/openai --external @ai-sdk/anthropic",
    "type-check": "tsc --noEmit",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "@hono/zod-validator": "^0.2.0",
    "zod": "^3.23.8",
    "@aah/database": "workspace:*",
    "@aah/auth": "workspace:*",
    "@aah/api-utils": "workspace:*",
    "@aah/config": "workspace:*",
    "@aah/ai": "workspace:*",
    "compromise": "^14.14.0",
    "jsonwebtoken": "^9.0.2",
    "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "tsx": "^4.7.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/crypto-js": "^4.2.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0"
  },
  "keywords": ["ai", "llm", "rag", "agents", "conversational-ai"],
  "engines": {
    "node": ">=18.0.0"
  }
}
