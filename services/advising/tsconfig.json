{
  "extends": "@aah/config/tsconfig/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "paths": {
      "@aah/auth": ["../../packages/auth/index.ts"],
      "@aah/database": ["../../packages/database/index.ts"],
      "@aah/api-utils": ["../../packages/api-utils/src/index.ts"],
      "@aah/config": ["../../packages/config/index.js"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"],
  "references": [
    { "path": "../../packages/auth" },
    { "path": "../../packages/api-utils" },
    { "path": "../../packages/config" }
  ]
}
