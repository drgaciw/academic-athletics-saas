    "@aah/api-utils": "workspace:*",
    "@aah/config": "workspace:*",
    "@clerk/backend": "^1.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "tsx": "^4.7.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0"
  }
}
